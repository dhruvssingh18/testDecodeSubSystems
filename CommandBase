// TestTeleOp.java
package OpModes;

import com.qualcomm.robotcore.eventloop.opmode.OpMode;
import com.qualcomm.robotcore.eventloop.opmode.TeleOp;

import libSubsystems.drivetrain;
import libSubsystems.extend;
import libSubsystems.gripper;

@TeleOp(name = "SubsystemOpmode")
public class SubsystemOpmode extends OpMode {

    private gripper claw;
    private drivetrain drive;

    private extend extend;

    @Override
    public void init() {
        // Create a new gripper object using the hardware map and the servo name from your config
        claw = new gripper(hardwareMap, "gripperServo");
        drive = new drivetrain(hardwareMap);
        extend = new extend(hardwareMap);
    }

    @Override
    public void loop() {


        //gamepad1
        if(gamepad1.left_bumper) {
           drive.strafeLeft(1);
        }

        else if(gamepad1.right_bumper){
            drive.strafeRight(1);
        }

        else{
            drive.tankDrive();
        }

        if(gamepad1.a){
            drive.driveForward(0.4);
        }

        else if(gamepad1.b){
            drive.driveBackward(0.4);
        }

        //gamepad2
        if(gamepad2.a) {
            claw.grab();
        }

        if(gamepad2.b) {
            claw.release();
        }

        if(gamepad2.y) {

            extend.setTargetTicks(2000); 
        }

        if(gamepad2.x) {

        }

        if(gamepad1.left_bumper) {

        }

        else if(gamepad1.right_bumper){

        }

        else{

        }





    }
}
